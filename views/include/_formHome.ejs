<% products.forEach(function(product){ %>
    <div class="col-lg-3 col-md-4 col-sm-6 mix <%= product.category %>">
        <div class="product__item">
            <div class="product__item__pic set-bg" data-setbg="data:image/<%=product.img.contentType%>;base64,<%=product.img.data.toString('base64')%>">
                <div class="label <%= product.status %>"><%= product.status %></div>
                <ul class="product__hover">
                    <li><a href="data:image/<%=product.img.contentType%>;base64,<%=product.img.data.toString('base64')%>" class="image-popup"><i class="fa fa-expand" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-heart" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-shopping-bag" aria-hidden="true"></i></a></li>
                </ul>
            </div>
            <div class="product__item__text">
                <h6><a href="#"><%= product.title %></a></h6>
                <div class="rating">
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                </div>
                <div class="product__price">$ <%= product.cost %></div>
            </div>
        </div>
    </div>
<%})%>